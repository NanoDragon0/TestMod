package me.nanodragon.testmod.Items;

import java.util.List;

import com.google.common.eventbus.Subscribe;

import cpw.mods.fml.common.eventhandler.SubscribeEvent;
import cpw.mods.fml.common.registry.GameRegistry;
import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import me.nanodragon.testmod.Main;
import net.minecraft.client.Minecraft;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public class BonusHP extends Item {

	public BonusHP() {
        this.canRepair = false;
        this.setUnlocalizedName("Палочка жизни");
        this.setTextureName("minecraft:blaze_rod");
        this.setCreativeTab(Main.tabDraconCore);
        this.maxStackSize = 10;
        
        GameRegistry.registerItem(this, "Палочка жизни");
    }
	
	@SideOnly(Side.CLIENT)
    public void addInformation(ItemStack ItemStack, EntityPlayer EntityPlayer, List List, boolean par4) {
        List.add("§2Креативный предмет");
    }
	
	@Subscribe
    public ItemStack onItemRightClick(ItemStack itemStack, World world, EntityPlayer player) {
		
		if (itemStack.getItem().getUnlocalizedName().equals("Палочка жизни")) {
			
			//Item item = itemStack.getItem();
			Minecraft.getMinecraft().thePlayer.sendChatMessage("Я работаю!");
			//System.out.println();
		}
        
        return itemStack;
    }
}
